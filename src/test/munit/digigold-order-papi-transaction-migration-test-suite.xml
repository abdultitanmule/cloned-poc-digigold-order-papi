		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock TxnMigrationScheduler" doc:id="f132451a-d254-4b4d-99ca-74266211d23c" processor="scheduler">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="TxnMigrationScheduler" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[{}]" mediaType="application/json" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
			<munit-tools:mock-when doc:name="Mock when reading SFTPFile" doc:id="3fd2fbea-2fdd-4ec5-b6d4-50c861a38eca" processor="sftp:read">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Read" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[MunitTools::getResourceAsString("input/DigiGoldTransactions.csv")]' mediaType="text/csv" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
						<munit-tools:mock-when doc:name="Mock when DynamoDBPut" doc:id="e4097807-83f7-48ad-a63b-0dfd51c4c554" processor="dynamodb:batch-put-item">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Batch put item" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#["Mocked DynamoBatchPut"]' />
				</munit-tools:then-return>
			</munit-tools:mock-when>
			<munit-tools:mock-when doc:name="Mock when ArchivingFile" doc:id="e804539f-e0a1-41a3-ad5b-3b1c13fafaa9" processor="sftp:move">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Move to Archive" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="SFTP_Config" attributeName="config-ref" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[payload]" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
			<munit-tools:spy doc:name="Spy" doc:id="53f6c86e-e90a-427a-b454-f60d1d15d602" processor="dynamodb:batch-put-item">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Batch put item" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:after-call >
					<munit-tools:assert-equals doc:name="Assert equals" doc:id="e68da977-cab4-406d-9495-ead76cbb45c3" actual="#[payload]" expected='#["Mocked DynamoBatchPut"]' message='#["Failure in Dynamo Mock"]'/>
